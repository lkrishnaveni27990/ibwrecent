		<li data-target="#slides" data-slide-to="0" class="active"></li>
		<li data-target="#slides" data-slide-to="1"></li>
		<li data-target="#slides" data-slide-to="2"></li>
	</ul>
	<div class="carousel-inner">
		<div class="carousel-item active">
			<img class="image" src="img/background.png">
			<div class="carousel-caption">
				<br>
				<h2 class="">Your Dezires Our Dezigns</h2>
				<h4 >"Quality is Our Priority"</h4>
				<br><br>
				<br>
				<button type="button" class="btn btn-outline-light btn-lg">Our Catalogue</button>
				<button type="button" class="btn btn-primary btn-lg">Get Started</button>
			</div>
		</div>
		<div class="carousel-item">
			<img class="image" src="img/background2.jpg">
			<div class="carousel-caption">
				<br>
				<h3 style="color:black">"Exclusive bond between Elegance and Quality"</h3>
				<br><br>
				<br>
				<button type="button" class="btn btn-outline-light btn-lg" style="background-color:black">Our Catalogue</button>
			</div>
		</div>
		<div class="carousel-item">
			<img class="image" src="img/background3.jpg">
			<div class="carousel-caption">
				<br>
				<h3 style="color:black">"Fresh and Appealing Designs"</h3>
				<br><br>
				<br>
				<button type="button" class="btn btn-outline-light btn-lg"style="background-color:black"id="#collection">Our Catalogue</button>
			</div>
		</div>
	</div>
</div>
</section>

<section>
    <div class="container mt-5">
        <div class="row ">
            {{#each products}}
            <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <a href="#" class="btn btn-primary">Add To Cart</a>
                        </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>


